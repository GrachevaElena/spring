<?xml version="1.0" encoding="ISO-8859-1"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="piano" class="com.netcracker.Piano">
        <constructor-arg value="0"/>
    </bean>
    <bean id="violin" class="com.netcracker.Violin">
        <constructor-arg value="4"/>
    </bean>
    <bean id="guitar" class="com.netcracker.Guitar" >
        <property name="numStrings" value="6"/>
    </bean>


    <bean id="guitarPlayer" class="com.netcracker.Musician">
        <property name="instrument">
            <list>
                <ref bean="guitar"/>
            </list>
        </property>
    </bean>
    <bean id="guitarAndViolinPlayer" class="com.netcracker.Musician">
        <property name="instrument">
            <list>
                <ref bean="guitar"/>
                <ref bean="violin"/>
            </list>
        </property>
    </bean>
    <bean id="guitarAndViolinAndPianoPlayer" class="com.netcracker.Musician">
        <property name="instrument">
            <list>
                <ref bean="guitar"/>
                <ref bean="violin"/>
                <ref bean="piano"/>
            </list>
        </property>
    </bean>

</beans>
